.swiper_nav{
    width:100vw;
    font-size:1.2rem;
    background-color:#fff;
    box-shadow:0 0 10px rgba(0,0,0,0.8);
    position:fixed;
    padding:0.5rem 0;
    text-align:center;
    z-index:99;
    display:-webkit-flex;
    display: flex;
    justify-content:center;
}
.swiper_nav view{
    margin:0 1rem;
    display:inline-block;
}
.swiper_nav view.active{
    font-weight:bold;
}
.day_list,.topic_list{
    width:100vw;
    position:absolute;
    top:0;
    left:0;
    opacity:0;
    height:0;
    overflow:hidden;
    transition:all 0.5s;
    background:#181919;
    margin-top:2rem;
}
.day_list.active,.topic_list.active{
    height:auto;
    opacity:1;
}
.day_list .movie_box{
    margin:0.5rem 0;
    width:100%;
    min-height:423rpx;
    background-image:url(https://img.dangcdn.com/haquapp/default.jpg);
    background-repeat:no-repeat;
    background-size:cover;
    position:relative;
    background-position:center;
}
.day_list .movie_box image{
    height:423rpx;
    width:750rpx;
}
.day_list .movie_box .day_mask{
    position:absolute;
    top:0;
    left:0;
    width:100%;
    height:100%;
    background-color:rgba(0,0,0,0.5);
    display: flex;
    display:-webkit-flex;
    justify-content:center;
    align-items:center;
}
.day_list .movie_box .day_mask .movie_title_box{
    text-align:center;
}
.day_list .movie_box .day_mask .day_title{
    color:#fff;
    font-weight:bold;
    font-size:1.2rem;
    width:100%;
    text-align:center;
    display:block;
    padding:0;
    margin:0 auto;
}
.day_list .movie_box .day_mask .day_duration{
    color:#fff;
    font-size:1rem;
    width:100%;
    text-align:center;
    padding:0;
    margin:0 auto;
    margin-top:1.5rem;
}
