/* pages/video/video.wxss */
page{
    overflow-x:hidden;
}
.go_home{
    text-align:center;
    padding:0.5rem 0;
    font-size:1rem;
}
.video_box{
    width:100%;
}
.video_info{
    width:calc(100% - 1rem);
    padding:0.5rem;
    padding-bottom:0;
    background-color:#f1f1f1;

}
.video_info .video_title{
    width:100%;
    font-size:1.2rem;
    font-weight:bold;
}
.video_info .tag_box{
    margin:0.5rem 0;
}
.video_info .tag_box text{
    display:inline-block;
    position:relative;
    padding-right:0.5rem;
}
.video_info .operation_box{
    width:100%;
    padding-bottom:0.8rem;
    margin-top:1rem;
    border-bottom:1px solid #cecece;
}
.video_info .operation_box view{
    display:inline-block;
    padding-left:1.5rem;
    margin-right:2rem;
    background-repeat:no-repeat;
    background-size:1rem;
    background-position:left center;
    font-size:0.9rem;
}
.video_info .operation_box view.zan{
    background-image:url('https://img.dangcdn.com/haquapp/2x/ding_nomal_icon_2x.png');
}
.video_info .operation_box view.cai{
    background-image:url('https://img.dangcdn.com/haquapp/2x/cai_nomal_icon_2x.png');
}
.video_info .operation_box view.play_num{
    float:right;
    margin-right: 0;
}
.video_info .author_box{
    padding:0.6rem 0.5rem;
    border-bottom:1px solid #cecece;
}
.video_info .author_box .head_img{
    width:3rem;
    height:3rem;
    border-radius:100%;
    overflow:hidden;
    display:inline-block;
    background-image:url('https://img.dangcdn.com/haquapp/haqu.png');
    background-repeat:no-repeat;
    background-position:center;
    background-size:100%;
    background-color:gold;
}
.video_info .author_box .author_name{
    display:inline-block;
    margin-left:0.5rem;
    line-height:3rem;
    vertical-align:top;
}

.relation_video{
    width:calc(100% - 1rem);
    padding:0.5rem;
}
.relation_video .title{
    font-size:1.2rem;
    font-weight:bold;
}
.relation_video .relation_info_box{
    width:100%;
    margin:0.8rem 0;
}

.relation_video .relation_info_box image{
    width:262rpx;
    height:145rpx;
}
.relation_video .relation_info_box .relation_info{
    width:calc(100% - 280rpx);
    height:145rpx;
    display:inline-block;
    box-sizing:border-box;
    vertical-align:top;
    float:right;
}
.relation_video .relation_info_box .relation_info .relation_title{
    font-size:1rem;
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.relation_video .relation_info_box .relation_info .relation_author,.relation_video .relation_info_box .relation_info .relation_playnum{
    font-size:0.8rem;
    color:#ababab;
    width:49%;
    margin-top:0.5rem;
    display:inline-block;
}
.relation_video .relation_info_box .relation_info .relation_playnum{
    text-align:right;
}

.comment_list{
    width:calc(100% - 1rem);
    padding:0 0.5rem;
}
.comment_list .title{
    font-size:1.2rem;
    font-weight:bold;
}
.comment_list .comment_box{
    margin:0.6rem 0;
}
.comment_list .comment_box .comment_headimg{
    width:3rem;
    height:3rem;
    display:inline-block;
    vertical-align:top;
    border-radius:100%;
    background-size:100%;
    background-position:center;
    background-repeat:no-repeat;
    background-image:url('https://img.dangcdn.com/haquapp/haqu.png');
}
.comment_list .comment_box .comment_info{
    width:calc(100% - 4.5rem);
    margin-left:1rem;
    display:inline-block;
    border-bottom:1px solid #cecece;
}
.comment_list .comment_box .comment_info .comment_head .comment_author{
    font-size:1rem;
    display:inline-block;
    vertical-align:top;
    line-height:1rem;
    width:70%;
    overflow:hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.comment_list .comment_box .comment_info .comment_head .ding{
    font-size:0.8rem;
    padding-left:1.5rem;
    background-image:url('https://img.dangcdn.com/haquapp/2x/thumbsup_icon_2x.png');
    background-size:1rem;
    background-position:left 90%;
    background-repeat:no-repeat;
    display:inline-block;
    float:right;
    vertical-align:top;
    line-height:1rem;
}
.comment_list .comment_box .comment_info .comment_main{
    font-size:1rem;
    color:#8c8c8c;
    overflow:hidden;
    text-overflow:ellipsis;
    display:-webkit-box;
    -webkit-line-clamp:5;
    -webkit-box-orient:vertical;
}
.comment_list .comment_box .comment_info .comment_main.active{
    display:inline;
}
.comment_list .comment_box .comment_info .comment_date{
    font-size:0.8rem;
    color:#afafaf;
    line-height:1.2rem;
   display:inline-block;
   margin-bottom:0.5rem;
}