/* pages/topic/topic.wxss */
view,text{
    box-sizing:border-box;
}
.topic_head_box{
    min-height: 2rem;
    position: fixed;
    width: 100%;
    overflow: hidden;
    background:#333;
    z-index:9;
    top:0
}
.go_home{
    text-align:center;
    color:#f4f4f4;
    padding:0.5rem 0;
    font-size:1rem;
}
.topic_head_box .topic_title{
    font-size:1.5rem;
    font-weight:bold;
    text-align:center;
    color:#fff;
    margin:0.8rem;
}
.topic_head_box .topic_num{
    font-size:0.8rem;
    color:#ababab;
    padding:0.5rem;
    display:inline-block;
}
.topic_head_box .topic_num .yellow{
    color:#f6dd34;
}

.swiper_nav{
    width:100vw;
    font-size:1.2rem;
    background-color:#fff;
    box-shadow:0 0 10px rgba(0,0,0,0.8);
    /*position:fixed;*/
    padding:0.5rem 0;
    text-align:center;
    z-index:99;
    display:-webkit-flex;
    display: flex;
    justify-content:center;
}
.swiper_nav view{
    margin:0 1rem;
    display:inline-block;
}
.swiper_nav view.active{
    font-weight:bold;
}


.hot_box,.last_box{
    opacity:0;
    height:0;
    transition:all 0.5s;
    overflow:hidden;
}
.hot_box.active,.last_box.active{
    opacity:1;
    height:auto;
    margin-top:8rem;
}
.movie_box{
    width:100%;
    margin:0.5rem auto;
    background-color:#fff;
    box-shadow:0 0 5px rgba(115,115,115,0.5);
    position:relative;
}
.movie_box .title_box{
    background:rgba(0,0,0,0.3);
    width:100%;
    height:422rpx;
    position:absolute;
    top:0;
    left:0;
    padding:0.5rem;
    color:#fff;
}
.movie_box .title_box .play_box{
    font-size:0.8rem;
    margin-top:80rpx;
    text-align:center;
    padding-top:2.5rem;
    background-position:center top;
    background-repeat:no-repeat;
    background-size:2rem;
    background-image:url('https://img.dangcdn.com/haquapp/play.png');
}
.movie_box .title_box .play_box text{
    width:100%;
    display:block;
    margin-bottom:0.5rem;
}
.movie_box .title{
    width:100%;
    font-size:1rem;
}
.movie_box image{
    width:100%;
    height:422rpx;
}
.movie_box .operation{
    padding:0 0.5rem;
    font-size:1rem;
    line-height:0.8rem;
}
.movie_box .operation .move_tags{
    font-size:0.9rem;
    color:#ababab;
    vertical-align:middle;
    display:inline-block;
    max-width:50%;
    white-space:nowrap;
    text-overflow:ellipsis;
    padding-bottom:0.8rem;
}
.movie_box .operation .operation_box{
    display:inline-block;
    padding-left:1.5rem;
    float:right;
    color:#ababab;
    font-size:0.9rem;
    background-image:url('https://img.dangcdn.com/haquapp/comment.png');
    background-size:1rem;
    background-position:left bottom;
    background-repeat:no-repeat;
    margin-bottom:0.8rem;
}
.loading{
    background-image:url('https://img.dangcdn.com/haquapp/2x/videoloading_2x.png');
    height:1.5rem;
    width:1.5rem;
    background-size:1.5rem;
    animation:loading 0.5s;
    -webkit-animation-iteration-count:infinite;
    background-repeat:no-repeat;
    margin:1rem auto;
}
@keyframes loading{
    0%{
        transform:rotate(0)
    }
    100%{
        transform:rotate(298deg)
    }
}