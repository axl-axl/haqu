/* pages/user/user.wxss */
.userinfo{
    padding:1.5rem 0.5rem;
    width:100vw;
    border-bottom:1px solid #eaeaea;
    background-color:#f4f4f4;
}
.userinfo .headimg{
    width:4rem;height:4rem;
    display:inline-block;
    border-radius:100%;
    overflow:hidden;
}
.userinfo .nickname{
    color:#181818;
    font-size:1.5rem;
    margin-left:1rem;
    max-width:70%;
    display:inline-block;
    line-height:4rem;
    vertical-align:top;
}
.download_box{
    font-size:1rem;
    color:#818181;
    padding:1rem;
    text-align:center;
    position:relative;
}
.download_box .download_btn{
    width:3rem;height:3rem;
    position:absolute;
    right:10vw;
    top:-1.5rem;
    background-position:center;
    background-repeat:no-repeat;
    background-size:100%;
    background-image:url('https://img.dangcdn.com/haquapp/play.png');
}
.operation_box{
    margin-top:1rem;
    padding-left:1rem;
}
.operation_box view{
    padding-left:2rem;
    background-position:left center;
    background-repeat:no-repeat;
    background-size:1rem;
    margin-top:1rem;
}
.operation_box .history_look{
    background-image:url('https://img.dangcdn.com/haquapp/2x/history_normal.png');
}
.operation_box .movie_like{
    background-image:url('https://img.dangcdn.com/haquapp/2x/like__nomal_icon_2x.png');
}